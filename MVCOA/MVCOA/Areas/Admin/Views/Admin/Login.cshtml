@model MODEL.ViewModel.LoginUser

@{
    Layout = null;
}
@*转换成强类型视图*@


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin</title>
    <style type="text/css">
        #loadMsg {
            /*会导致重排*/
            display: none;
            /*visibility: hidden;*/ /*会导致重绘*/
        }

        #loginTable td {
            border: 1px solid #0094ff;
        }
    </style>

    @Scripts.Render("~/mvcAjax")    @*请求BundleConfig.cs中mvcAjax合并的脚本*@
    <script type="text/javascript">
        //成功时调用，接收控制的返回值
        function Success(josnData) {
            $.procAjaxData(josnData, function () { window.location = josnData.BackUrl; });
        }
    </script>
</head>
<body>
    @*默认提交到当前页面所对应的控制器方法中*@
    @using (Ajax.BeginForm(new AjaxOptions
{
    HttpMethod = "post",
    OnSuccess = "Success",
    LoadingElementId = "loadMsg"
}))
    {
        <table id="loginTable">
            <tr>
                <td>用户名：</td>
                <td>@Html.TextBoxFor(u => u.uLoginName, new { Value = "admin" })</td>
                <td>@Html.ValidationMessageFor(u => u.uLoginName)</td>
            </tr>
            <tr>
                <td>密码：</td>
                <td>@Html.PasswordFor(u => u.uPwd, new { Value = "123" })</td>
                <td>@Html.ValidationMessageFor(u => u.uPwd)</td>
            </tr>
            <tr>
                <td>记住用户名</td>
                <td>@Html.CheckBoxFor(u => u.isAlways)</td>
            </tr>
            <tr>
                <td colspan="2"><input type="submit" value="登录" /></td>
            </tr>
        </table>
    }
    <div id="loadMsg">
        正在加载中。。。。
    </div>
</body>
</html>
