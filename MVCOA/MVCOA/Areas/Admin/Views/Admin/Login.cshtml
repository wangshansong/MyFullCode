@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin</title>
    @Scripts.Render("~/mvcAjax")    @*请求BundleConfig.cs中mvcAjax合并的脚本*@
    <style type="text/css">
    #loadMsg {
        /*会导致重排*/
        display: none;
        /*visibility: hidden;*/  /*会导致重绘*/
    }
    </style>
    <script type="text/javascript">
        //成功时调用，接收控制的返回值
        function Success(josnData)
        {
            alert(josnData);
        }
    </script>
</head>
<body>
    @*默认提交到当前页面所对应的控制器方法中*@
   @using (Ajax.BeginForm(new AjaxOptions
{
    HttpMethod = "post",
    OnSuccess = "Success",
    LoadingElementId = "loadMsg"  
}))
{
    <input type="text" name="txtName" value="admin" />
    <input type="password" name="txtPwd" value="123123" />
    <input type="submit" />
}
    <div id="loadMsg">
        正在加载中。。。。
    </div>
</body>
</html>
